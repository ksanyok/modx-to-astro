---
import { Image } from 'astro:assets';
import { resolveImage } from '../utils/imageLoader';

interface Props {
  src: string;
  alt?: string;
  width?: number;
  height?: number;
  cover?: boolean;
  borderless?: boolean;
  position?: string;
  loading?: 'lazy' | 'eager';
  fetchpriority?: 'high' | 'low' | 'auto';
}

const {
  src = '',
  alt = '',
  cover = false,
  borderless = false,
  position = '',
  loading = 'lazy',
  fetchpriority = 'auto',
} = Astro.props;

const positionMap: Record<string, string> = {
  'img-cover-pos-t': 'object-top',
  'img-cover-pos-b': 'object-bottom',
  'img-cover-pos-l': 'object-left',
  'img-cover-pos-r': 'object-right',
};

const resolvedImage = await resolveImage(src);

const imgClass = [
  cover ? 'w-full h-full object-cover' : 'max-w-full h-auto',
  borderless ? '' : 'rounded-xl',
  positionMap[position] || '',
].filter(Boolean).join(' ');
---
{resolvedImage ? (
  <Image
    src={resolvedImage}
    alt={alt}
    widths={[400, 800, 1200]}
    sizes="(max-width: 640px) 100vw, (max-width: 1024px) 80vw, 800px"
    loading={loading}
    decoding="async"
    fetchpriority={fetchpriority}
    class={imgClass}
  />
) : src ? (
  <img
    src={src}
    alt={alt}
    loading={loading}
    decoding="async"
    fetchpriority={fetchpriority}
    class={imgClass}
  />
) : null}
