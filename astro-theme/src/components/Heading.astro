---
interface Props {
  text: string;
  level?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6';
  textAlign?: string;
}

const { text = '', level = 'h2', textAlign = '' } = Astro.props;

const Tag = level;

const sizeClasses: Record<string, string> = {
  h1: 'text-3xl sm:text-4xl md:text-5xl font-bold tracking-tight',
  h2: 'text-2xl sm:text-3xl md:text-4xl font-bold tracking-tight',
  h3: 'text-xl sm:text-2xl font-semibold tracking-tight',
  h4: 'text-lg sm:text-xl font-semibold',
  h5: 'text-base sm:text-lg font-semibold',
  h6: 'text-sm sm:text-base font-semibold uppercase tracking-wider text-(--color-text-light)',
};

const alignMap: Record<string, string> = {
  't-align-c': 'text-center',
  't-align-r': 'text-right',
};
---
{text && (
  <Tag
    class:list={[
      sizeClasses[level] || sizeClasses.h2,
      'mb-5 text-(--color-text)',
      alignMap[textAlign] || '',
    ]}
    set:html={text}
  />
)}
