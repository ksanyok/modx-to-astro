---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  lang?: string;
  canonicalUrl?: string;
  ogImage?: string;
  /** Hashed URL of the hero image at 1920w — used for <link rel="preload"> in <head> */
  heroPreloadSrc?: string;
  /** Full imagesrcset string for the hero image preload */
  heroPreloadSrcset?: string;
  favicon?: string;
  noindex?: boolean;
  maxLayoutWidth?: number;
  analyticsId?: string;
  analyticsType?: string;
  /** Raw HTML injected into <head> — tracking codes (GTM, GA4, Pixel, etc.) */
  trackingCodeHead?: string;
  /** Raw HTML injected at start of <body> — GTM noscript fallback etc. */
  trackingCodeBody?: string;
  theme?: {
    primaryColor?: string;
    secondaryColor?: string;
    accentColor?: string;
    accentColorDark?: string;
    backgroundColor?: string;
    textColor?: string;
    bodyFont?: string;
    headingFont?: string;
  };
}

const {
  title,
  description = '',
  lang = 'de',
  canonicalUrl,
  ogImage,
  heroPreloadSrc = '',
  heroPreloadSrcset = '',
  favicon,
  noindex = false,
  maxLayoutWidth = 1200,
  analyticsId = '',
  analyticsType = 'analytics',
  trackingCodeHead = '',
  trackingCodeBody = '',
  theme = {},
} = Astro.props;

// Build canonical URL from current page if not explicitly provided
const canonical = canonicalUrl || new URL(Astro.url.pathname, Astro.site).href;
const pageUrl = new URL(Astro.url.pathname, Astro.site).href;

// Build CSS custom property overrides from theme config
const themeVars = [
  theme.accentColor && `--color-accent: ${theme.accentColor}`,
  theme.accentColorDark && `--color-accent-dark: ${theme.accentColorDark}`,
  theme.accentColor && `--color-accent-light: color-mix(in srgb, ${theme.accentColor} 8%, white)`,
  theme.primaryColor && `--color-primary: ${theme.primaryColor}`,
  theme.backgroundColor && `--color-bg: ${theme.backgroundColor}`,
  theme.textColor && `--color-text: ${theme.textColor}`,
  theme.bodyFont && `--font-body: ${theme.bodyFont}`,
  theme.headingFont && `--font-heading: ${theme.headingFont}`,
  // --page-color3 mirrors accentColor so that legacy inline styles like
  // style="background-color:var(--page-color3)" from MODX templates work correctly
  theme.accentColor && `--page-color3: ${theme.accentColor}`,
  // --layout-max-width controls container width (extracted from MODX maxwidth setting)
  maxLayoutWidth && `--layout-max-width: ${maxLayoutWidth}px`,
].filter(Boolean).join('; ');

// Extract font family names from theme CSS font stacks (e.g. "'Montserrat', sans-serif")
function extractFontNames(fontStr: string): string[] {
  if (!fontStr) return [];
  const matches = fontStr.match(/'([^']+)'/g);
  return matches ? matches.map((m: string) => m.replace(/'/g, '').trim()).filter((f: string) => !['sans-serif', 'serif', 'cursive', 'monospace', 'system-ui'].includes(f)) : [];
}
const fontNames = [...new Set([...extractFontNames(theme.bodyFont || ''), ...extractFontNames(theme.headingFont || '')])];

// Self-hosted fonts: map display names → local slug and available weights
// Fonts are in /public/fonts/{slug}-{weight}.woff2 (served at /fonts/)
const SELF_HOSTED: Record<string, { slug: string; weights: number[] }> = {
  'Montserrat':       { slug: 'montserrat',       weights: [400, 600, 700] },
  'Comfortaa':        { slug: 'comfortaa',         weights: [400, 600, 700] },
  'Roboto':           { slug: 'roboto',            weights: [400, 600, 700] },
  'Quicksand':        { slug: 'quicksand',         weights: [400, 600, 700] },
  'Oswald':           { slug: 'oswald',            weights: [400, 600, 700] },
  'Inter':            { slug: 'inter',             weights: [400, 600, 700] },
  'Frank Ruhl Libre': { slug: 'frank-ruhl-libre',  weights: [400, 600, 700] },
  'Raleway':          { slug: 'raleway',           weights: [400, 600, 700] },
  'Lato':             { slug: 'lato',              weights: [400, 700] },
  'Open Sans':        { slug: 'open-sans',         weights: [400, 600, 700] },
  'Nunito':           { slug: 'nunito',            weights: [400, 600, 700] },
  'Poppins':          { slug: 'poppins',           weights: [400, 600, 700] },
};

// Build @font-face CSS for fonts that are available locally; fall back to Google Fonts for unknown ones
const fallbackFontNames: string[] = [];
const localFontFaces = fontNames.flatMap((name: string) => {
  const entry = SELF_HOSTED[name];
  if (!entry) { fallbackFontNames.push(name); return []; }
  return entry.weights.map((w: number) => (
    `@font-face{font-family:'${name}';src:url('/fonts/${entry.slug}-${w}.woff2') format('woff2');` +
    `font-weight:${w};font-style:normal;font-display:optional;}`
  ));
}).join('');

// Only use Google Fonts for any fonts NOT available locally (rare / custom fonts)
const googleFontsUrl = fallbackFontNames.length > 0
  ? `https://fonts.googleapis.com/css2?${fallbackFontNames.map((f: string) => `family=${f.replace(/\s+/g, '+')}:wght@400;600;700`).join('&')}&display=optional`
  : '';
---
<!doctype html>
<!-- b7264r9s -->
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    {description && <meta name="description" content={description} />}
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    <link rel="canonical" href={canonical} />
    {favicon && <link rel="icon" href={favicon} />}

    {/* Preload LCP hero image — exact hashed WebP URLs computed by getImage() in PageLayout */}
    {heroPreloadSrc && (
      <link rel="preload" as="image" href={heroPreloadSrc} fetchpriority="high"
        imagesrcset={heroPreloadSrcset || undefined}
        imagesizes={heroPreloadSrcset ? '100vw' : undefined}
      />
    )}
    
    {/* Self-hosted fonts — @font-face from same origin, zero external requests, no DNS delay */}
    {localFontFaces && <style set:html={localFontFaces} />}

    {/* Fallback: Google Fonts for any fonts not available locally (loaded async, non-blocking) */}
    {googleFontsUrl && (
      <link rel="preconnect" href="https://fonts.googleapis.com" />
    )}
    {googleFontsUrl && (
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    )}
    {googleFontsUrl && (
      <link rel="stylesheet" href={googleFontsUrl} media="print" onload="this.media='all'" />
    )}
    {googleFontsUrl && (
      <noscript><link rel="stylesheet" href={googleFontsUrl} /></noscript>
    )}
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:url" content={pageUrl} />
    {description && <meta property="og:description" content={description} />}
    {ogImage && <meta property="og:image" content={ogImage} />}
    <meta property="og:type" content="website" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content={ogImage ? 'summary_large_image' : 'summary'} />
    <meta name="twitter:title" content={title} />
    {description && <meta name="twitter:description" content={description} />}
    {ogImage && <meta name="twitter:image" content={ogImage} />}
    
    <title>{title}</title>
    <!-- b7264r9s -->

    {/* Tracking codes (GTM, GA4, Facebook Pixel, etc.) — injected from site-config.trackingCodeHead */}
    {trackingCodeHead && <Fragment set:html={trackingCodeHead} />}
  </head>
  <body class="bg-(--color-bg) text-(--color-text) font-sans antialiased" style={themeVars || undefined}>
    {/* Tracking codes for <body> — GTM noscript fallback etc., injected from site-config.trackingCodeBody */}
    {trackingCodeBody && <Fragment set:html={trackingCodeBody} />}
    <slot />

    <script>
      // Scroll-reveal: observe elements with .animate-on-scroll
      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
            observer.unobserve(entry.target);
          }
        });
      }, {
        threshold: 0.06,
        rootMargin: '0px 0px -60px 0px',
      });

      document.querySelectorAll('.animate-on-scroll').forEach((el) => {
        observer.observe(el);
      });
    </script>
  </body>
</html>
